<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_kunena" type="cjblog_badges" method="upgrade" title="COM_CJBLOG_FORUM">
	<extension_rule>
		<rule_name>com_kunena.num_posts</rule_name>
		<rule_description>Assign a badge when user submits N number of posts.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_POSTS" name="num_posts" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_kunena.num_thankyou</rule_name>
		<rule_description>Assign a badge when user recieves N number of thank you.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_THANKYOU" name="num_thankyou" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
</extension>