<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_communitycrosswords" type="cjblog_badges" method="upgrade" title="COM_CJBLOG_CROSSWORDS">
	<extension_rule>
		<rule_name>com_communitycrosswords.num_questions</rule_name>
		<rule_description>Assign a badge when user submits N number of crossword questions.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_QUESTIONS" name="num_questions" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_communitycrosswords.solve_crossword</rule_name>
		<rule_description>Assign a badge when user solve N number of crosswords.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_CROSSWORDS" name="num_crosswords" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
</extension>