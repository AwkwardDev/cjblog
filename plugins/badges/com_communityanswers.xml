<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_communityanswers" type="cjblog_badges" method="upgrade" title="COM_CJBLOG_ANSWERS">
	<extension_rule>
		<rule_name>com_communityanswers.num_questions</rule_name>
		<rule_description>Assign a badge when user submits N number of questions.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_QUESTIONS" name="num_questions" type="text" dataType="int" compare="ge"></rule>
		</rules>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_communityanswers.num_answers</rule_name>
		<rule_description>Assign a badge when user answered N number of answers.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_ANSWERS" name="num_answers" type="text" dataType="int" compare="ge"></rule>
		</rules>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_communityanswers.num_best_answers</rule_name>
		<rule_description>Assign a badge when user submits N number of best answers.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_BEST_ANSWERS" name="num_answers" type="text" dataType="int" compare="ge"></rule>
		</rules>
		<access_level>1</access_level>
	</extension_rule>
</extension>