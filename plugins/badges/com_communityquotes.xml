<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_communityquotes" type="cjblog_badges" method="upgrade" title="COM_CJBLOG_QUOTES">
	<extension_rule>
		<rule_name>com_communityquotes.num_quotes</rule_name>
		<rule_description>Assign a badge when user submits N number of quotes.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_QUOTES" name="num_quotes" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_communityquotes.num_profiles</rule_name>
		<rule_description>Assign a badge when user submitted N number of author profiles.</rule_description>
		<rules join="and" method="assign" multiple="0">
			<rule label="COM_CJBLOG_NUM_PROFILES" name="num_profiles" type="text" dataType="int" compare="ge"></rule>
		</rules>
	</extension_rule>
</extension>