<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_content" type="cjblog_points" method="upgrade">
	<extension_rule>
		<rule_name>com_content.hits</rule_name>
		<rule_title>Read Article</rule_title>
		<rule_description>Points awarded for reading an article.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_content</asset_name>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_content.popular_articles</rule_name>
		<rule_title>Article Hits Milestone</rule_title>
		<rule_description>Points awarded to article author when the article read specified number of times.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_content</asset_name>
		<access_level>1</access_level>
		<conditional_rule>hits</conditional_rule>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_content.newarticle</rule_name>
		<rule_title>Submit Article</rule_title>
		<rule_description>Points awarded for submitting an article.</rule_description>
		<auto_approve>0</auto_approve>
		<asset_name>com_content</asset_name>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_content.deletearticle</rule_name>
		<rule_title>Delete Article</rule_title>
		<rule_description>Points deducted when an article is deleted.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_content</asset_name>
		<access_level>1</access_level>
	</extension_rule>
</extension>