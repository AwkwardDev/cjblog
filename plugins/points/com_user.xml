<?xml version="1.0" encoding="UTF-8"?>
<extension name="com_user" type="cjblog_points" method="upgrade">
	<extension_rule>
		<rule_name>com_users.signup</rule_name>
		<rule_title>New User</rule_title>
		<rule_description>Points awarded for registering on the website.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_users</asset_name>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_users.login</rule_name>
		<rule_title>Daily Login</rule_title>
		<rule_description>Points awarded for logging into the site in a day.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_users</asset_name>
		<access_level>1</access_level>
	</extension_rule>
	
	<extension_rule>
		<rule_name>com_users.birthday</rule_name>
		<rule_title>Birthday Points</rule_title>
		<rule_description>Points awarded for logging into the site on his/her birth day.</rule_description>
		<auto_approve>1</auto_approve>
		<asset_name>com_users</asset_name>
		<access_level>1</access_level>
	</extension_rule>
</extension>